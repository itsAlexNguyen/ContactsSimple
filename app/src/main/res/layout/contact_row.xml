<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:importantForAccessibility="no"
        android:paddingBottom="@dimen/app_static_padding"
        android:paddingLeft="@dimen/app_static_padding"
        android:paddingTop="@dimen/app_static_padding" />

    <TextView
        android:id="@+id/name_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/app_static_padding"
        android:textAlignment="viewStart"
        android:textColor="@color/default_font"
        tools:text="Alex Nguyen" />
</LinearLayout>