<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_grey"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/app_static_padding"
    android:paddingRight="@dimen/app_static_padding"
    android:weightSum="4">

    <Button
        android:id="@+id/message_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/empty_profile_image"
        android:gravity="center"
        android:paddingBottom="@dimen/app_static_padding"
        android:paddingTop="@dimen/app_static_padding" />

    <Button
        android:id="@+id/call_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/empty_profile_image"
        android:gravity="center"
        android:paddingBottom="@dimen/app_static_padding"
        android:paddingTop="@dimen/app_static_padding" />

    <Button
        android:id="@+id/video_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/empty_profile_image"
        android:gravity="center"
        android:paddingBottom="@dimen/app_static_padding"
        android:paddingTop="@dimen/app_static_padding" />

    <Button
        android:id="@+id/email_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/empty_profile_image"
        android:gravity="center"
        android:paddingBottom="@dimen/app_static_padding"
        android:paddingTop="@dimen/app_static_padding" />

</LinearLayout>